[run]
source = qutip
omit =
    # QuTiP test files
    */qutip/tests/*
    # Tool for tests
    */qutip/solver/sode/_noise.py
    # Feature we want to remove, hiding them while waiting to see if users will complain.
    */qutip/legacy/*

[report]
exclude_lines =
    # Skip Python wrappers which help load in C extension modules.
    __bootstrap__()
    # Skip empty method that are never meant to be used.
    raise NotImplementedError
